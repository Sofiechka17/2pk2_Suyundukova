<Window x:Class="Суюндукова_София.WindowAppication.AddAuto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Суюндукова_София.WindowAppication"
        mc:Ignorable="d"
      Title="Добавление авто" Height="400" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/photo/photo1.jpg"/>
    </Window.Background>
    <Grid>
        <StackPanel>
            <!--Строение окна-->
            <TextBlock Margin="0 5 0 5" 
                       TextWrapping="Wrap" 
                       Text="Добавление авто" FontFamily="Comfortaa" 
                       VerticalAlignment="Center" 
                       Foreground="Black"
                       FontSize="30" HorizontalAlignment="Center"/>
            <TextBlock Margin="0 5 0 5" 
                       TextWrapping="Wrap" 
                       Text= "Модель" 
                       Foreground="Black"
                       FontFamily="Comfortaa" VerticalAlignment="Center" 
                       FontSize="20" HorizontalAlignment="Center"/>
            <TextBox Name="Model"  VerticalAlignment="Center" 
                     FontSize="15" HorizontalAlignment="Center" 
                     MinWidth="200"/>
            <TextBlock Margin="0 5 0 5" 
                       TextWrapping="Wrap" 
                       Text="Цена и состояние" 
                       Foreground="Black"
                       FontFamily="Comfortaa" VerticalAlignment="Center" 
                       FontSize="20" HorizontalAlignment="Center"/>
            <TextBox Name="Condition"  VerticalAlignment="Center" 
                     FontSize="15" HorizontalAlignment="Center" 
                     MinWidth="200"/>
            <TextBlock Margin="0 5 0 5" 
                       TextWrapping="Wrap" Text="Bыберите класс" 
                       FontFamily="Comfortaa" 
                       VerticalAlignment="Center" 
                       FontSize="20" 
                       Foreground="Black"
                       HorizontalAlignment="Center"/>
            <ComboBox Name="Combobox" MaxWidth="200">
                <ComboBoxItem Content="Эконом"/>
                <ComboBoxItem Content="Комфорт"/>
                <ComboBoxItem Content="Премиум"/>
            </ComboBox>
            <Button Margin="0 15 0 0" 
                    Content="Добавить" 
                    MaxWidth="200" FontSize="15" 
                    MinHeight="30" FontFamily="Comfortaa" 
                    Background="#C3B505" 
                    Foreground="Black"
                    Click="AddNewAuto"/>
            <Button Margin="0 15 0 0" 
                    Content="Bыйти" 
                    MaxWidth="200" FontSize="15" 
                    MinHeight="30" 
                    Foreground="Black"
                    FontFamily="Comfortaa" Background="#C3B505" 
                    Click="Button_Exit"/>
        </StackPanel>
    </Grid>
</Window>
