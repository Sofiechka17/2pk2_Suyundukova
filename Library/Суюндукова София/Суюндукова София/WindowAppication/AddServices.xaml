<Window x:Class="Суюндукова_София.WindowAppication.AddServices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Суюндукова_София.WindowAppication"
        mc:Ignorable="d"
             Title="Добавление услуги" Height="250" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/photo/photo1.jpg"/>
    </Window.Background>
    <Grid>
        <StackPanel>
            <!--Строение окна-->
            <TextBlock Margin="0 5 0 5" 
                       TextWrapping="Wrap" 
                       Text="Добавление услуги" FontFamily="Comfortaa" 
                       VerticalAlignment="Center" 
                       Foreground="Black"
                       FontSize="30" HorizontalAlignment="Center"/>
            <TextBlock Margin="0 5 0 5" 
                       TextWrapping="Wrap" 
                       Text="Название услуги" 
                       Foreground="Black"
                       FontFamily="Comfortaa" VerticalAlignment="Center" 
                       FontSize="20" HorizontalAlignment="Center"/>
            <TextBox Name="Name"  VerticalAlignment="Center" 
                     FontSize="15" HorizontalAlignment="Center" 
                     MinWidth="250"/>
            <Button Margin="0 15 0 0" 
                    Content="Добавить" 
                    MaxWidth="200" FontSize="15" 
                    MinHeight="30" FontFamily="Comfortaa" 
                    Background="#C3B505" 
                    Foreground="Black"
                    Click="AddService"/>
            <Button Margin="0 15 0 0" 
                    Content="Bыйти" 
                    MaxWidth="200" FontSize="15" 
                    MinHeight="30" 
                    Foreground="Black"
                    FontFamily="Comfortaa"  Background="#C3B505" 
                    Click="Exit"/>
        </StackPanel>
    </Grid>
</Window>
